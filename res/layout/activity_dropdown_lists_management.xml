<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DropdownListsManagementActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonStorageLocationManagement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Storage locations"
            android:textSize="23dp"
            android:background="@drawable/ic_custom_button1"
            android:textColor="@color/white"
            android:layout_weight="1"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonConsumableTypeManagement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_custom_button5"
            android:textColor="#056160"
            android:text="Consumable types"
            android:textSize="23dp"
            android:layout_weight="1"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonDeviceTypeManagement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_custom_button2"
            android:textColor="@color/white"
            android:text="Device types"
            android:textSize="23dp"
            android:layout_weight="1"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>